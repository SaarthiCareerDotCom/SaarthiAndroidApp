<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saarthicareer.saarthicareer.fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/oops"/>

                <TextView
                    android:id="@+id/oops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OOPS and C++"
                    android:textColor="@color/textColorPrimary"
                    android:layout_below="@+id/image"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/oops2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification Course"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/oops"
                    android:layout_marginStart="15dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/oopsNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="@color/textColorPrimary"
                    android:fontFamily="monospace"
                    android:layout_below="@+id/oops2"
                    android:layout_margin="15dp"
                    android:background="@drawable/border_for_post"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/oopsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Info"
                    android:textColor="@color/textColorPrimary"
                    android:background="@drawable/border_for_post"
                    android:fontFamily="monospace"
                    android:layout_below="@+id/oops2"
                    android:layout_marginEnd="20dp"
                    android:layout_margin="15dp"
                    android:padding="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_toRightOf="@+id/oopsNotif"/>

                <ImageView
                    android:id="@+id/s1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/star"
                    android:layout_below="@+id/image"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/oops"/>

                <TextView
                    android:id="@+id/da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Analytics"
                    android:textColor="@color/textColorPrimary"
                    android:layout_below="@+id/image2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/da2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certification Course"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/da"
                    android:layout_marginStart="15dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/daNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textColor="@color/textColorPrimary"
                    android:fontFamily="monospace"
                    android:layout_below="@+id/da2"
                    android:layout_margin="15dp"
                    android:background="@drawable/border_for_post"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/daInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Info"
                    android:textColor="@color/textColorPrimary"
                    android:background="@drawable/border_for_post"
                    android:fontFamily="monospace"
                    android:layout_below="@+id/da2"
                    android:layout_marginEnd="20dp"
                    android:layout_margin="15dp"
                    android:padding="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_toRightOf="@+id/daNotif"/>

                <ImageView
                    android:id="@+id/s2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/star"
                    android:layout_below="@+id/image2"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

